<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Component Information</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { color: #2c3e50; }
    .component-info { margin-top: 20px; }
    .pics img { width: 200px; margin-right: 10px; }
    .params, .snippets { margin-top: 20px; }
  </style>
   <script src="public/script.js" defer></script>
</head>
<body>
  <h1>Component Information</h1>
  
  <!-- Input form to search components by tag -->
  <div id="search-form">
    <label for="tagInput">Enter tag substring:</label>
    <input type="text" id="tagInput" name="tag" placeholder="Enter part of tag" value="<%= tag %>">
  </div>

    <!-- Container to display the component information -->
    <div id="component-container">
        <% if (component) { %>
        <div class="component-info">
            <h2><%= component.name %></h2>
            <p><strong>Type:</strong> <%= component.type %></p>
            <p><strong>Tags:</strong> <%= component.tags %></p>
            <p><strong>Programming Language:</strong> <%= component.programming_language %></p>

            <h3>Pictures:</h3>
            <div class="pics">
            <% pics.forEach(pic => { %>
                <img src="<%= pic.pic_path %>" alt="Picture" />
            <% }); %>
            </div>

            <h3>Parameters:</h3>
            <ul class="params">
            <% params.forEach(param => { %>
                <li><strong><%= param.param %>:</strong> <%= param.description %> (<%= param.required ? 'Required' : 'Optional' %>)</li>
            <% }); %>
            </ul>

            <h3>Code Snippets:</h3>
            <ul class="snippets">
            <% snippets.forEach(snippet => { %>
                <li><strong><%= snippet.file_name %>:</strong> <%= snippet.snippet %></li>
            <% }); %>
            </ul>
        </div>
        <% } else { %>
            <p>No components found matching the tag "<%= tag %>".</p>
        <% } %>
    </div>
</body>
</html>